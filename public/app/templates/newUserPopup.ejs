<md-dialog aria-label="Mango (Fruit)"  ng-cloak ng-controller="userListController">
    <form>
        <md-toolbar style="background-color: #388E3C;">
            <div class="md-toolbar-tools">
                <h2>Create New User</h2>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="cancel()">
                    x
                </md-button>
            </div>
        </md-toolbar>

        <md-dialog-content style="max-width:800px;max-height:810px; ">
            <div class="md-dialog-content">
                
                <div layout layout-sm="column">
                    <md-input-container flex>
                        <label>First name</label>
                        <input ng-model="newUser.firstname">
                    </md-input-container>
                    
                    <md-input-container flex>
                        <label>Last Name</label>
                        <input ng-model="newUser.lastname">
                    </md-input-container>
                </div>

                <div layout layout-sm="column">
                    <md-input-container flex>
                        <label>Email</label>
                        <input ng-model="newUser.useremail" type="email">
                    </md-input-container>

                    <md-input-container flex>
                        <label>Age</label>
                        <input name="postalCode" ng-model="newUser.userage" required ng-pattern="/^[0-9]/">
                    </md-input-container>
                </div>

                <div layout layout-sm="column">
                    <md-input-container flex>
                        <label>Mobile</label>
                        <input name="postalCode" ng-model="newUser.mobile" required ng-pattern="/^[0-9]/">
                    </md-input-container>

                    <md-datepicker ng-model="newUser.birthdate" md-placeholder="Date of Birth" flex>
                    </md-datepicker>
                </div>

            </div>
        <md-divider></md-divider>
        </md-dialog-content>
        
        <div class="md-actions" layout="row">
            <span flex></span>
            
            <md-button ng-click="answer('not useful')" >Cancel</md-button>
            <md-button ng-click="addUser()" style="margin-right:20px;" class="green-btn md-raised md-primary">Add User</md-button>
        </div>
    </form>
</md-dialog>